<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @match.name %>
</p>

<p>
  <b>Date:</b>
  <%= @match.date.localtime.strftime('%B %-d %Y') %>
</p>

<p>
  <b>League:</b>
  <%= @match.league_id %>
</p>

<p>
  <b>Opponents:</b>
  <%= @match.golfers[0].full_name %> vs. <%= @match.golfers[1].full_name %>
</p>

