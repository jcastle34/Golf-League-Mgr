<h1>Listing Matches</h1>

<table>
  <tr>
    <th>League</th>
    <th>Date - Time</th>
    <th>Name</th>
    <th>Opponents</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.league.name %></td>
    <td><%= match.date.localtime.strftime('%B %-d %Y - %l:%M %p') %></td>
    <td><%= match.name %></td>
    <td>
        <%= match.golfers[0].full_name %> vs. <%= match.golfers[1].full_name %>
    </td>
    <td><%= link_to 'Show', round_match_path(match.round.id, match) %></td>
    <td><%= link_to 'Edit', edit_round_match_path(match.round.id, match) %></td>
    <td><%= link_to 'Score Card', round_match_show_score_card_path(match.round.id, match) %></td>
    <td><%= link_to 'Destroy', round_match_path(match.round.id, match), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

