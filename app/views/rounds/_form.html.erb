<%= form_for(@round) do |f| %>
    <% if @round.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

          <ul>
            <% @round.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :number %>
      <br/>
      <%= f.text_field :number %>
    </div>
    <div class="field">
      <%= f.label :date %>
      <br/>
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label 'Opponent' %>
      <br/>
      <%= select(:team, 'first_opponent', Team.all.collect { |u| [u.name, u.id] }, {:include_blank => true}) %>
    </div>
    <div class="field">
      <%= f.label 'Opponent' %>
      <br/>
      <%= select(:team, 'second_opponent', Team.all.collect { |u| [u.name, u.id] }, {:include_blank => true}) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
