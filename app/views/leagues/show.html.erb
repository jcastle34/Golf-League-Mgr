<p id="notice"><%= notice %></p>

<h1><%= @league.name %></h1>

<div>
    <div class="float-left league-standings">
        <h2>Standings</h2>
    </div>

    <div class="float-left league-members">
      <h2>Members</h2>
      <% @members.each do |member| %>
          <div><%= member.full_name %></div>
      <% end %>
    </div>

    <div class="float-left">
      <h2>Teams</h2>
      <% @teams.each do |team| %>
          <div><%= team.name %></div>
          <div>
            <% team.golfers.each do |golfer| %>
            - <%= golfer.full_name %>
                <br/>
            <% end %>
          </div>
      <% end %>
    </div>
</div>
<div style="clear:both;"></div>
<div>
  <div class="float-left">
    <h2>Rounds</h2>
    <% @rounds.each do |round| %>
        <div style="padding-top:5px">
            <%= round.number %> -
            <%= round.date %>
        </div>
        <% if round.date == Date.parse('2015-04-21')%>
            <% round.matches.each do |match| %>
                <div style="padding-left:10px"><%= match.name %></div>
            <% end %>
        <% end %>
    <% end %>
  </div>
  <div style="clear:both;"></div>
</div>
